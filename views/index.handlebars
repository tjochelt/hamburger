<h1>Burgers</h1>

<h2>Eat deez burgers</h2>

<ul>
    {{#each name}}
    {{#unless devoured}}
    {{!-- {{> cats/cat-block devoured=true}} --}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers that are devoured</h2>

<ul>
    {{#each name}}
    {{#if devoured}}
    {{!-- {{> cats/cat-block sleep=false}} --}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
        <label for="sleepy">Devoured?</label><br>
        <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
        <input type="radio" name="sleepy" value="0"> Awake
    </div>

    <button type="submit">Add Burger</button>
</form>